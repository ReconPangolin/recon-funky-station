<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    MaxHeight="525"
    MinWidth="300">
    <ScrollContainer
        Margin="5 5 5 5"
        ReturnMeasure="True"
        VerticalExpand="True">
        <BoxContainer
            Name="RootContainer"
            VerticalExpand="True"
            Orientation="Vertical">
            <Label
                Name="NoPlantDataText"
                Text="{Loc plant-analyzer-window-no-plant-data-text}" />

            <BoxContainer
                Name="PatientDataContainer"
                Margin="0 0 0 5"
                Orientation="Vertical">
                <BoxContainer Orientation="Horizontal" Margin="0 0 0 5">
                    <SpriteView OverrideDirection="South" Scale="2 2" Name="SpriteView" Access="Public" SetSize="64 64" />
                    <TextureRect Name="NoDataTexture" Access="Public" SetSize="64 64" Visible="false" Stretch="KeepAspectCentered" TexturePath="/Textures/Interface/Misc/health_analyzer_out_of_range.png"/>
                    <BoxContainer Margin="5 0 0 0" Orientation="Vertical" VerticalAlignment="Top">
                        <RichTextLabel Name="PlantNameLabel" SetWidth="150" />
                    </BoxContainer>
                </BoxContainer>

                <PanelContainer StyleClasses="LowDivider" />

                <GridContainer Margin="0 5 0 0" Columns="4">
                    <PanelContainer>
                        <PanelContainer.PanelOverride>
                            <gfx:StyleBoxFlat BackgroundColor="#649466"
                                              BorderColor="#5a5a5a"
                                              BorderThickness="2 2 2 2"/>
                        </PanelContainer.PanelOverride>
                        <BoxContainer Orientation="Vertical" Margin="5 1 5 1">
                            <Label Text="{Loc 'recon-plant-analyzer-window-plant-yield'}"
                                   HorizontalAlignment="Center"/>
                            <Label Name="YieldLabel"
                                   StyleClasses="LabelSubText"
                                   SetWidth="100" ClipText="True"
                                   FontColorOverride="White"/>
                        </BoxContainer>
                    </PanelContainer>
                    <PanelContainer>
                        <PanelContainer.PanelOverride>
                            <gfx:StyleBoxFlat
                                              BorderColor="#5a5a5a"
                                              BorderThickness="2 2 2 2"/>
                        </PanelContainer.PanelOverride>
                        <BoxContainer Orientation="Vertical" Margin="5 1 5 1">
                            <Label Text="{Loc 'recon-plant-analyzer-window-plant-production'}"
                                   HorizontalAlignment="Center"/>
                            <Label Name="ProductionLabel"
                                   StyleClasses="LabelSubText"
                                   SetWidth="100" ClipText="True"
                                   FontColorOverride="White"/>
                        </BoxContainer>
                    </PanelContainer>
                    <PanelContainer>
                        <PanelContainer.PanelOverride>
                            <gfx:StyleBoxFlat BackgroundColor="#649466"
                                              BorderColor="#5a5a5a"
                                              BorderThickness="2 2 2 2"/>
                        </PanelContainer.PanelOverride>
                        <BoxContainer Orientation="Vertical" Margin="5 1 5 1">
                            <Label Text="{Loc 'recon-plant-analyzer-window-plant-maturation'}"
                                   HorizontalAlignment="Center"/>
                            <Label Name="MaturationLabel"
                                   StyleClasses="LabelSubText"
                                   SetWidth="100" ClipText="True"
                                   FontColorOverride="White"/>
                        </BoxContainer>
                    </PanelContainer>
                    <PanelContainer>
                        <PanelContainer.PanelOverride>
                            <gfx:StyleBoxFlat
                                              BorderColor="#5a5a5a"
                                              BorderThickness="2 2 2 2"/>
                        </PanelContainer.PanelOverride>
                        <BoxContainer Orientation="Vertical" Margin="5 1 5 1">
                            <Label Text="{Loc 'recon-plant-analyzer-window-plant-potency'}"
                                   HorizontalAlignment="Center"/>
                            <Label Name="PotencyLabel"
                                   StyleClasses="LabelSubText"
                                   SetWidth="100" ClipText="True"
                                   FontColorOverride="White"/>
                        </BoxContainer>
                    </PanelContainer>

                </GridContainer>
            </BoxContainer>
            <RichTextLabel Name="ChemLabel"
                           StyleClasses="LabelSubText"/>
        </BoxContainer>
    </ScrollContainer>
</controls:FancyWindow>
